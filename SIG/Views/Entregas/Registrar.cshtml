@model SIG.Entidades.Entrega

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column min-vh-800" style="background-color: #f3f5f8; margin-left: 3.3%; padding: 20px; border-radius: 15px; height: auto; width: 100%">
    <div class="text-center mb-4">
        <h2 style="font-weight: bold; color: #111111; border-bottom: 2px solid #111111; padding-bottom: 10px;">
            Registrar Entrega
        </h2>
    </div>
    <div class="container">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success text-center">@ViewBag.SuccessMessage</div>
        }

        @using (Html.BeginForm("Registrar", "Entregas", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.PedidoId, "Número de Pedido", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.PedidoId, new { @class = "form-control shadow-lg", @required = "required", placeholder = "Ingrese el número de pedido" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.FechaEntrega, "Fecha de Entrega", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.FechaEntrega, new { @class = "form-control shadow-lg", @type = "date" })
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.DireccionEntrega, "Dirección de Entrega", new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.DireccionEntrega, new { @class = "form-control shadow-lg", @rows = "2", placeholder = "Ingrese la dirección de entrega" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ArticulosEntregados, "Artículos Entregados", new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ArticulosEntregados, new { @class = "form-control shadow-lg", @rows = "3", placeholder = "Ingrese los artículos entregados" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ObservacionesAdicionales, "Observaciones Adicionales", new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ObservacionesAdicionales, new { @class = "form-control shadow-lg", @rows = "3", placeholder = "Ingrese observaciones adicionales" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-gradient">Registrar Entrega</button>
            </div>
        }
    </div>
</div>

<style>
    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
            border-color: #5b8c5a;
        }

    .btn-gradient {
        background: linear-gradient(to right, #5b8c5a, #2f5930);
        color: white;
        border: none;
        padding: 12px 24px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 6px;
        transition: transform 0.2s ease-in-out, background 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .btn-gradient:hover {
            transform: scale(1.1);
            background: linear-gradient(to right, #2f5930, #5b8c5a);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
        }

    .select-style {
        text-align: left;
        padding-left: 12px;
        height: 50px;
        font-size: 16px;
    }
</style>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script src="~/root/plugins/bootstrap/js/bootstrap.min.js"></script>
