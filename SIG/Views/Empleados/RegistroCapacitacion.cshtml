                            @foreach (var empleado in ViewBag.Empleados)
                            {
                                <option value="@empleado.Value">@empleado.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        `;
        document.getElementById("tareas-container").appendChild(newTarea);
        tareaIndex++;
    });*@

    document.getElementById('planForm').addEventListener('submit', function (event) {
        event.preventDefault();

        const form = this;
        const formData = new FormData(form);

        fetch(form.action, {
            method: form.method,
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    title: 'Éxito',
                    text: data.message,
                    icon: 'success',
                    confirmButtonText: 'Aceptar'
                }).then(() => {
                    form.reset();
                });
            } else {
                Swal.fire({
                    title: 'Error',
                    text: data.message,
                    icon: 'error',
                    confirmButtonText: 'Aceptar'
                });
            }
        })
        .catch(error => {
            Swal.fire({
                title: 'Error',
                text: 'Ocurrió un problema al registrar capacitación.',
                icon: 'error',
                confirmButtonText: 'Aceptar'
            });
        });
    });
    </script>

</body>
</html>
