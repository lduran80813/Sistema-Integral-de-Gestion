@model IEnumerable<SIG.Entidades.UsuarioEmpleado>

<form method="get" action="@Url.Action("ListarUsuarios")">
</form>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar Usuario</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link href="~/root/dist/css/listView.css" rel="stylesheet" />
</head>

<div class="container">
    <div class="titulo-tabla">Tabla de Empleados</div>

    <table id="tablaUsuarios" class="table flex-nowrap">
        <thead>
            <tr>
                <th>Nombre Completo</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Usuario</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Fecha de Nacimiento</th>
                <th>Número de Identificación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.estado ? "" : "table-danger")">
                    <td>@item.nombre @item.apellidos</td>
                    <td>@item.correo_electronico</td>
                    <td>@(item.estado ? "Activo" : "Inactivo")</td>
                    <td>@item.usuario</td>
                    <td>@item.telefono</td>
                    <td>@item.direccion</td>
                    <td>@(item.fecha_nacimiento.HasValue ? item.fecha_nacimiento.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                    <td style="text-align: center ">@item.numero_identificacion</td>
                    <td>
                        @if (!item.estado)
                        {
                            using (Html.BeginForm("RestaurarEmpleado", "Login", FormMethod.Post, new { id = "restaurarForm" + item.id_usuario, @class = "d-inline" }))
                            {
                                @Html.Hidden("id", item.id_usuario)
                                <button type="submit" class="btn btn-success" onclick="return confirm('¿Está seguro de que desea restaurar este usuario?');">
                                    <i class="fa-solid fa-rotate-left"></i> Restaurar
                                </button>
                            }
                        }
                        else
                        {
                            <div class="botones-acciones">
                                @using (Html.BeginForm("Editar", "Login", FormMethod.Get, new { id = "editarForm" + item.id_usuario, @class = "d-inline" }))
                                {
                                    @Html.Hidden("id", item.id_usuario)
                                    <button type="submit" class="btn btn-primary" onclick="return confirm('¿Está seguro de que desea editar este usuario?');">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                }

                                @using (Html.BeginForm("EliminarEmpleado", "Login", FormMethod.Post, new { id = "form" + item.id_usuario, @class = "d-inline" }))
                                {
                                    @Html.Hidden("id", item.id_usuario)
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este usuario?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="~/root/dist/js/Listar.js"></script>


