@model SIG.Entidades.Vacaciones
@{
    ViewBag.Title = "Vacaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Solicitar Vacaciones</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm("Solicitar", "Vacaciones", FormMethod.Post))
{
    <div class="form-group">
        <label for="FechaInicio">Fecha de Inicio</label>
        @Html.TextBoxFor(m => m.FechaInicio, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="FechaFin">Fecha de Fin</label>
        @Html.TextBoxFor(m => m.FechaFin, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.FechaFin, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="SupervisorId">Supervisor</label>
        @Html.TextBoxFor(m => m.SupervisorId, new { @class = "form-control", type = "number", placeholder = "ID del Supervisor" })
        @Html.ValidationMessageFor(m => m.SupervisorId, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
}