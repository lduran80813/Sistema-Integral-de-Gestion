@model SIG.BaseDatos.Empleado

@{
    ViewBag.Title = "Detalles del Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Detalles del Empleado</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditarEmp", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m.id)
                @Html.HiddenFor(m => m.numero_identificacion)
                @Html.HiddenFor(m => m.departamento_id)
                @Html.HiddenFor(m => m.puesto_id)
                @Html.HiddenFor(m => m.rol_id)

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="nombre" class="col-form-label">Nombre:</label>
                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", required = "required", placeholder = "Ingrese el nombre" })
                    </div>
                    <div class="col-md-6">
                        <label for="apellidos" class="col-form-label">Apellidos:</label>
                        @Html.TextBoxFor(m => m.apellidos, new { @class = "form-control", required = "required", placeholder = "Ingrese los apellidos" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="correo_electronico" class="col-form-label">Correo Electrónico:</label>
                        @Html.TextBoxFor(m => m.correo_electronico, new { @class = "form-control", required = "required", @readonly = "readonly", placeholder = "ejemplo@dominio.com" })
                    </div>
                    <div class="col-md-6">
                        <label for="usuario" class="col-form-label">Usuario:</label>
                        @Html.TextBoxFor(m => m.usuario, new { @class = "form-control", required = "required", @readonly = "readonly", placeholder = "Nombre de usuario" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="telefono" class="col-form-label">Teléfono:</label>
                        @Html.TextBoxFor(m => m.telefono, new { @class = "form-control", required = "required", placeholder = "Ingrese el teléfono" })
                    </div>
                    <div class="col-md-6">
                        <label for="direccion" class="col-form-label">Dirección:</label>
                        @Html.TextBoxFor(m => m.direccion, new { @class = "form-control", required = "required", placeholder = "Ingrese la dirección" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="fecha_nacimiento" class="col-form-label">Fecha de Nacimiento:</label>
                        @Html.TextBoxFor(m => m.fecha_nacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @disabled = "disabled" })
                    </div>
                    <div class="col-md-6">
                        <label for="numero_identificacion" class="col-form-label">Número de Identificación:</label>
                        @Html.TextBoxFor(m => m.numero_identificacion, new { @class = "form-control", required = "required", placeholder = "Ingrese el número de identificación", @disabled = "disabled" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="col-form-label">Departamento:</label>
                        @Html.DropDownList("departamento_id", (IEnumerable<SelectListItem>)ViewBag.Departamentos, "Seleccione un departamento", new { @class = "form-control", @disabled = "disabled" })
                    </div>
                    <div class="col-md-6">
                        <label class="col-form-label">Puesto:</label>
                        @Html.DropDownList("puesto_id", (IEnumerable<SelectListItem>)ViewBag.Puestos, "Seleccione un puesto", new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="col-form-label">Rol:</label>
                        @Html.DropDownList("rol_id", (IEnumerable<SelectListItem>)ViewBag.Roles, "Seleccione un rol", new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary" style="background: linear-gradient(to right, #0056b3, #004494); color: white;">Guardar Cambios</button>
                    <button type="button" class="btn btn-secondary" style="background: linear-gradient(to right, #333, #666); color: white; margin-left: 10px;" onclick="window.history.back();">Retroceder</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px; 
    }

    .form-control {
        border-radius: 5px; 
    }

    .btn-primary, .btn-secondary {
        border-radius: 5px; 
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover, .btn-secondary:hover {
            opacity: 0.8;
        }
</style>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}