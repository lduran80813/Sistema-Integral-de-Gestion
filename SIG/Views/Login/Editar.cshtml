@model SIG.BaseDatos.Empleado

@{
    ViewBag.Title = "EditarEmpleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditarEmpleado</h2>


@using (Html.BeginForm("Editar", "Login", FormMethod.Post))
{
    @Html.HiddenFor(m => m.id)

    <div class="form-group">
        <label for="nombre">Nombre:</label>
        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="apellidos">Apellidos:</label>
        @Html.TextBoxFor(m => m.apellidos, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="correo_electronico">Correo Electrónico:</label>
        @Html.TextBoxFor(m => m.correo_electronico, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="usuario">Usuario:</label>
        @Html.TextBoxFor(m => m.usuario, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="telefono">Teléfono:</label>
        @Html.TextBoxFor(m => m.telefono, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="direccion">Dirección:</label>
        @Html.TextBoxFor(m => m.direccion, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="fecha_nacimiento">Fecha de Nacimiento:</label>
        @Html.TextBoxFor(m => m.fecha_nacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" }) // Formato de fecha
    </div>

    <div class="form-group">
        <label for="numero_identificacion">Número de Identificación:</label>
        @Html.TextBoxFor(m => m.numero_identificacion, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.departamento_id, "Departamento", new { @class = "control-label" })
        @Html.DropDownList("departamento_id", (IEnumerable<SelectListItem>)ViewBag.Departamentos, "Seleccione un departamento", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.puesto_id, "Puesto", new { @class = "control-label" })
        @Html.DropDownList("puesto_id", (IEnumerable<SelectListItem>)ViewBag.Puestos, "Seleccione un puesto", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.rol_id, "Rol", new { @class = "control-label" })
        @Html.DropDownList("rol_id", (IEnumerable<SelectListItem>)ViewBag.Roles, "Seleccione un rol", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    @Html.ActionLink("Cancelar", "ListarUsuarios", null, new { @class = "btn btn-secondary" })
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
