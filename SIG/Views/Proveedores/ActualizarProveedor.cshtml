@model SIG.Entidades.Proveedor
@{
    ViewBag.Title = "Actualizar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column min-vh-800" style="background-color: #f3f5f8; margin-left: 3.3%; padding: 20px; border-radius: 15px; height: auto; width: 100%">
    <div class="text-center mb-4">
        <h2 style="font-weight: bold; color: #111111; border-bottom: 2px solid #111111; padding-bottom: 10px;">
            Actualizar Proveedor
        </h2>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            @if (ViewBag.msj != null)
            {
                <div class="alert alert-info text-center" role="alert">
                    @ViewBag.msj
                </div>
            }
            <div class="container">
                @using (Html.BeginForm("ActualizarProveedor", "Proveedores"))
                {
                    @Html.HiddenFor(m => m.id)

                    <div class="mb-3">
                        @Html.LabelFor(m => m.nombre, "Nombre del proveedor", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control form-control-lg shadow-lg", @required = "true", @placeholder = "Ingrese el nombre del proveedor" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Dirección", new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.direccion, new { @class = "form-control shadow-lg", @rows = "3", @required = "true", @placeholder = "Ingrese la dirección del proveedor" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Nombre de contacto", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.nombre_contacto, new { @class = "form-control shadow-lg", @required = "true", @placeholder = "Ingrese el nombre del contacto" })
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            @Html.Label("Teléfono", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.telefono, new { @class = "form-control shadow-lg", @type = "tel", @required = "true", @placeholder = "Ingrese el número de teléfono" })
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Correo electrónico", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.correo_electronico, new { @class = "form-control shadow-lg", @type = "email", @required = "true", @placeholder = "Ingrese el correo electrónico" })
                        </div>
                    </div>

                    <br>
                    <div class="mb-3">
                        @Html.Label("Descripción adicional", new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.descripcion_adicional, new { @class = "form-control shadow-lg", @rows = "4", @placeholder = "Ingrese una descripción adicional" })
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-gradient">
                            <i class="fa fa-save"></i> Actualizar
                        </button>
                        <a href="@Url.Action("ListaProveedores", "Proveedores")" class="btn btn-delete">
                            <i class="fa fa-times"></i> Cancelar
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
            border-color: #5b8c5a;
        }

    .btn-gradient {
        background: linear-gradient(to right, #5b8c5a, #2f5930);
        color: white;
        border: none;
        padding: 12px 24px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: transform 0.2s ease-in-out, background 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .btn-gradient:hover {
            transform: scale(1.1);
            background: linear-gradient(to right, #2f5930, #5b8c5a);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
        }

    .btn-delete {
        background: linear-gradient(to right, #6c757d, #495057);
        color: white;
        border: none;
        padding: 12px 24px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: transform 0.2s ease-in-out, background 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .btn-delete:hover {
            transform: scale(1.1);
            background: linear-gradient(to right, #495057, #6c757d);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
        }
</style>
