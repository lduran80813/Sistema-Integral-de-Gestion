@model SIG.Entidades.Vacaciones
@{
    ViewBag.Title = "Vacaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Solicitar Vacaciones</h2>

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">@TempData["MensajeError"]</div>
}

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">@TempData["MensajeExito"]</div>
}

<form method="post" action="@Url.Action("Solicitar", "Empleados")">
    <input type="hidden" name="correoEmpleado" value="@Model.CorreoEmpleado" />

    <div class="form-group">
        <label for="fechaInicio">Fecha de Inicio</label>
        <input type="date" name="fechaInicio" id="fechaInicio" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="fechaFin">Fecha de Fin</label>
        <input type="date" name="fechaFin" id="fechaFin" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="observaciones">Observaciones</label>
        <textarea name="observaciones" id="observaciones" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
</form>
