@model SIG.Entidades.UsuarioEmpleado
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Cambiar Contraseña";
}

<div style="width: 400px; margin: auto; box-shadow: 0px 15px 35px rgba(0, 0, 0, 0.4); border-radius: 15px; overflow: hidden; background-color: #ffffff;">
    <div style="text-align: center; background-color: #ffffff; padding: 20px;">
        <img src="~/root/dist/img/logoRajasa.jpg" alt="Logo de la Empresa" style="width: 120px; height: auto;">
    </div>

    <div style="padding: 30px;">
        <p style="text-align: center; font-size: 22px; font-weight: bold; color: #444; margin-bottom: 25px;">Cambiar Contraseña</p>
        <h6 class="font-weight-light" style="text-align: center; margin-bottom: 20px;">Actualice su contraseña</h6>

        @if (ViewBag.msj != null)
        {
            <div style="background: rgba(253, 238, 238, 0.9); border: 1px solid #e74c3c; color: #e74c3c; text-align: center; font-size: 14px; padding: 10px; border-radius: 10px; margin-bottom: 20px;">
                @ViewBag.msj
            </div>
        }

        @using (Html.BeginForm("CambiarContrasenna", "Login"))
        {
            <div class="input-group mb-4">
                @Html.TextBoxFor(m => m.contrasena, new { @type = "password", @class = "form-control form-control-lg", @placeholder = "Contraseña nueva", @style = "border-radius: 8px; box-shadow: inset 0px 2px 5px rgba(0, 0, 0, 0.1);", @required = "true" })
                <div class="input-group-append">
                    <div class="input-group-text" style="border-radius: 8px; background: #f1f1f1;">
                        <span class="fas fa-lock" style="color: #32a852;"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-4">
                @Html.TextBoxFor(m => m.contrasenaConfirmar, new { @type = "password", @class = "form-control form-control-lg", @placeholder = "Confirmar contraseña", @style = "border-radius: 8px; box-shadow: inset 0px 2px 5px rgba(0, 0, 0, 0.1);", @required = "true" })
                <div class="input-group-append">
                    <div class="input-group-text" style="border-radius: 8px; background: #f1f1f1;">
                        <span class="fas fa-lock" style="color: #32a852;"></span>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-block" style="background: linear-gradient(135deg, #4caf50, #32a852); font-size: 16px; font-weight: bold; border-radius: 8px; box-shadow: 0px 5px 10px rgba(0,0,0,0.2);">CAMBIAR CONTRASEÑA</button>
            </div>
        }
    </div>
</div>