@model SIG.BaseDatos.Ticket_Tipo

@{
    ViewBag.Title = "Editar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column min-vh-800 contenedor-editar">
    <div class="text-center mb-4">
        <h2 class="titulo-principal">
            Editar Categoría
        </h2>
    </div>

    <div class="container">
        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info text-center" role="alert">
                @ViewBag.msj
            </div>
        }

        @using (Html.BeginForm("EditarCategoria", "IncidenciasITManager"))
        {
            @Html.HiddenFor(m => m.tipo_incidencia)
            @Html.HiddenFor(m => m.estado)

            <div class="mb-3">
                @Html.LabelFor(m => m.descripcion, "Descripción", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.descripcion, new { @class = "form-control shadow-lg", @maxlength = "100", @placeholder = "Ingrese la descripción de la categoría", @required = "true" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-gradient">Guardar Cambios</button>
            </div>
        }
    </div>
</div>

<style>
    /* Contenedor General */
    .contenedor-editar {
        background-color: #f3f5f8;
        margin-left: 3.3%;
        padding: 20px;
        border-radius: 15px;
        height: auto;
        width: 100%;
        overflow-y: auto;
    }

    /* Título */
    .titulo-principal {
        font-weight: bold;
        color: #111111;
        border-bottom: 2px solid #111111;
        padding-bottom: 10px;
    }

    /* Estilos para los inputs */
    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
            border-color: #5b8c5a;
        }

    /* Botón */
    .btn-gradient {
        background: linear-gradient(to right, #5b8c5a, #2f5930);
        color: white;
        border: none;
        padding: 12px 24px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: transform 0.2s ease-in-out, background 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .btn-gradient:hover {
            transform: scale(1.1);
            background: linear-gradient(to right, #2f5930, #5b8c5a);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
        }
</style>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script src="~/root/plugins/bootstrap/js/bootstrap.min.js"></script>
