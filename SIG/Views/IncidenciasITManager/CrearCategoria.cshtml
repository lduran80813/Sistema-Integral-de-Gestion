@model SIG.Entidades.CategoriaIncidencia
@{
    ViewBag.Title = "CrearCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column min-vh-800" style="background-color: #f3f5f8; margin-left: 3.3%; padding: 20px; border-radius: 15px; height: auto; width: 100%; font-family: 'Poppins', sans-serif;">
    <div class="text-center mb-4">
        <h2 style="font-weight: bold; color: #111111; border-bottom: 2px solid #111111; padding-bottom: 10px;">
            Crear Nueva Categoría de Incidencia
        </h2>
    </div>

    <div class="info-box">
        <div class="info-content">
            <i class="bi bi-pencil-square"></i>
            <p>Ingrese la descripción de la nueva categoría</p>
        </div>
    </div>

    <div class="container">
        @using (Html.BeginForm("CrearCategoria", "IncidenciasITManager", FormMethod.Post, new { @class = "form-cierre-contable" }))
        {
            <div class="input-container">
                <label class="input-label">Descripción</label>
                <div class="input-wrapper">
                    @Html.TextBoxFor(m => m.descripcion, new { @class = "form-control input-field shadow-lg", @maxlength = "100", @placeholder = "Ingrese la descripción", @required = "true" })
                </div>
            </div>

            <br />

            <button type="submit" class="btn btn-gradient">Registrar Categoría</button>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .info-box {
        background-color: #222222;
        border-radius: 8px;
        padding: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 80%;
        margin: 0 auto 20px;
        transition: all 0.3s ease-in-out;
    }

        .info-box:hover {
            transform: scale(1.05);
        }

    .info-content {
        display: flex;
        align-items: center;
        color: white;
        gap: 20px;
    }

        .info-content i {
            font-size: 22px;
            color: #01e173;
        }

        .info-content p {
            margin: 0;
            font-size: 16px;
            font-weight: bold;
        }

    .form-cierre-contable .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
        border: 2px solid transparent;
    }

        .form-cierre-contable .form-control:focus {
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
            border-color: #5b8c5a;
        }

    .btn-gradient {
        background: linear-gradient(to right, #5b8c5a, #2f5930);
        color: white;
        border: none;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: transform 0.2s ease-in-out, background 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            transform: scale(1.1);
            background: linear-gradient(to right, #2f5930, #5b8c5a);
        }
</style>
