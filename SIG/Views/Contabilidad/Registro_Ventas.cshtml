
@{
    ViewBag.Title = "Registro_Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Ventas y Transacciones</title>
    <div class="container">
        <h1>Registro de Ventas y Transacciones</h1>
        <form action="#" method="post">
            <!-- Campos del formulario -->
        </form>
    </div>

    <style>
        .container {
            width: 100%; /* Hace que el contenedor ocupe todo el ancho disponible */
            max-width: 800px; /* Define un ancho máximo para evitar que se desborde */
            margin: 0 auto; /* Centra el contenedor en la página */
            padding: 20px;
            box-sizing: border-box; /* Incluye el padding en el ancho total */
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input, select, textarea {
            width: 100%; /* Hace que los campos ocupen todo el ancho del contenedor */
            box-sizing: border-box; /* Asegura que padding no haga que los elementos se desborden */
        }

        button {
            width: 100%; /* Hace que el botón ocupe todo el ancho del contenedor */
        }
    </style>

</head>
<body>

    <div class="container">
        
        <form action="#" method="post">
            <label for="date">Fecha de la Venta:</label>
            <input type="date" id="date" name="date" required>

            <label for="customer-name">Nombre del Cliente:</label>
            <input type="text" id="customer-name" name="customer-name" required>

            <label for="product">Producto Vendido:</label>
            <input type="text" id="product" name="product" required>

            <label for="quantity">Cantidad:</label>
            <input type="number" id="quantity" name="quantity" min="1" required>

            <label for="price">Precio por Unidad:</label>
            <input type="number" id="price" name="price" min="0" step="0.01" required>

            <label for="total">Total de la Transacción:</label>
            <input type="number" id="total" name="total" min="0" step="0.01" required>

            <label for="payment-method">Método de Pago:</label>
            <select id="payment-method" name="payment-method" required>
                <option value="efectivo">Efectivo</option>
                <option value="tarjeta">Tarjeta de Crédito/Débito</option>
                <option value="transferencia">Transferencia Bancaria</option>
                <option value="otro">Otro</option>
            </select>

            <label for="notes">Notas Adicionales:</label>
            <textarea id="notes" name="notes" rows="4"></textarea>

            <button type="submit">Registrar Venta</button>
        </form>
    </div>

</body>
</html>


